<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.vault.demo.dao.backstage.AdminDao">
    <select id="checkLogin" resultType="com.vault.demo.bean.test">
        <![CDATA[
          select * from admin where account=#{account} and pwd=#{pwd}
        ]]>
    </select>
    <select id="getAdminById" resultType="com.vault.demo.bean.Admin">
        <![CDATA[
          select * from admin where aid=#{aid}
        ]]>
    </select>
    <update id="setPwd" >
        <![CDATA[
          UPDATE admin set pwd=#{newpwd} where aid=#{aid}
        ]]>
    </update>
</mapper>