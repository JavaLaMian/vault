<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.vault.demo.dao.HouseDao">
    <select id="selectPerBidByPerBidId" resultType="com.vault.demo.bean.PerBid" parameterType="com.vault.demo.bean.Loan">
        <![CDATA[
          select * from perBid where perBid=#{bidId}
        ]]>
    </select>

    <update id="updatePerBidStatus" parameterType="com.vault.demo.bean.PerBid">
        update perBid set bidStatus = #{bidStatus} where perBid = #{perBid}
    </update>
</mapper>